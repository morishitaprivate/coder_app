<h2>マイページ</h2>
<div class="justify-content-between d-flex pt-5">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header text-start">
        ユーザー情報
      </div>
      <div class="card-body d-flex text-start">
        <div class="col-md-3">
          <%= "#{User.human_attribute_name(:name)}：" %><br><br>
          <%= "#{User.human_attribute_name(:login_id)}：" %><br><br>
          <%= "#{User.human_attribute_name(:age)}：" %><br><br>
          <%= "#{User.human_attribute_name(:introduction)}：" %><br>
        </div>
        <div class="col-md-9">
          <%= @user.name %><br><br>
          <%= @user.login_id %><br><br>
          <%= @user.age %><br><br>
          <%= @user.introduction %><br>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <h4>あなたへのお知らせ</h4>
  </div>
</div>
<br>
<h3>これまでの投稿</h3>
<% @posts.each do |post| %>
  <div class="card" style="margin: 20px auto">
    <div class="card-header text-start">
      <%= link_to "#{post.user.name}さん", posts_path %>
    </div>
    <div class="card-body d-flex text-start">
      <div class="col-md-4">
        <%= "#{Post.human_attribute_name(:title)}：" %><br>
        <%= "#{Post.human_attribute_name(:url)}：" %><br>
        <%= "#{Post.human_attribute_name(:language)}：" %><br>
        <%= "#{Post.human_attribute_name(:content)}：" %><br>
        <%= "#{Post.human_attribute_name(:comment)}：" %>
      </div>
      <div class="col-md-8">
        <%= post.title %><br>
        <%= post.url %><br>
        <%= post.language.text %><br>
        <%= link_to 'こちらで確認', post_path(post.id) %><br>
        <%= post.comment[0..100] %>
      </div>
    </div>
  </div>
<% end %>