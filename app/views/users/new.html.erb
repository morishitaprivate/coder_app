<%= stylesheet_link_tag 'users', :media => "all" %>
<h1>ユーザー登録</h1>

<div class="row">
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |msg| %>
        <div style="color: red"><%= msg %></div>
      <% end %>
    <% end %>
    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
    
    <%= f.label :login_id, class: "sr-only" %>
    <%= f.text_field :login_id, class: "form-control", placeholder: "ログインID" %>
    
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %> 
    
    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード確認" %>
        
    <%= f.submit "登録", class: "btn btn-lg btn-primary btn-block", style: "margin: auto" %>
  <% end %>
</div>