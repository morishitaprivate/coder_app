<h2>投稿詳細</h2>

<div class="card" style="margin: 20px auto">
  <div class="card-header text-start">
    <%= link_to "#{@post.user.name}さん", post_path(@post.id) %>
  </div>
  <div class="card-body d-flex text-start">
    <div class="col-md-4">
      <%= "#{Post.human_attribute_name(:title)}：" %><br>
      <%= "#{Post.human_attribute_name(:url)}：" %><br>
      <%= "#{Post.human_attribute_name(:language)}：" %><br>
      <% if @post.comment.present? %>
        <%= "#{Post.human_attribute_name(:comment)}：" %>
      <% end %>
    </div>
    <div class="col-md-8">
      <%= @post.title %><br>
      <%= @post.url %><br>
      <%= @post.language.text %><br>
      <% if @post.comment.present? %>
        <%= @post.comment %>
      <% end %>
    </div>
  </div>
</div>
<div class="card" style="margin: 20px auto">
  <div class="card-header text-start">
    コード
  </div>
  <div class="card-body text-start" style="white-space: pre-wrap">
    <%= @post.content %>
  </div>
</div>